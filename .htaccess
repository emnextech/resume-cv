# Apache URL Rewriting for Clean URLs
# This file enables clean URLs without file extensions

# Enable Rewrite Engine
<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /

    # Redirect index.html to root
    RewriteCond %{THE_REQUEST} /index\.html[\s?] [NC]
    RewriteRule ^index\.html$ / [R=301,L]

    # Redirect mainBuilder.html to /cvbuilder
    RewriteCond %{THE_REQUEST} /mainBuilder\.html[\s?] [NC]
    RewriteRule ^mainBuilder\.html$ /cvbuilder [R=301,L]

    # Serve index.html for root URL
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_URI} ^/$
    RewriteRule ^$ index.html [L]

    # Serve mainBuilder.html for /cvbuilder
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_URI} ^/cvbuilder
    RewriteRule ^cvbuilder$ mainBuilder.html [L]

    # Prevent direct access to .html files (optional - comment out if you want both to work)
    # RewriteCond %{THE_REQUEST} \s/+([^?\s]*?)\.html[\s?] [NC]
    # RewriteRule ^ /%1 [R=301,L]
</IfModule>

# Set default index file
DirectoryIndex index.html

# Enable compression
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript application/json
</IfModule>

# Browser caching
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/jpg "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
</IfModule>
